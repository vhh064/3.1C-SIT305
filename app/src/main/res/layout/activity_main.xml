<?xml version="1.0" encoding="utf-8"?>
<!-- Use RelativeLayout for flexible positioning -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FF018786">

    <!-- TextView for the Welcome Message -->

    <TextView
        android:id="@+id/welcome_text_view"
        android:layout_width="324dp"
        android:layout_height="79dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:text="Welcome To The Primary Math Quiz!"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/enter_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/welcome_text_view"
        android:layout_marginTop="24dp"
        android:text="Enter your name"
        android:textSize="18sp"
        android:textColor="#FFFFFF" />

    <!-- EditText for the name input -->


    <EditText
        android:id="@+id/name_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/enter_name_label"
        android:layout_marginTop="11dp"
        android:hint="Your Name"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <Button
        android:id="@+id/start_quiz_button"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/grey"
        android:padding="12dp"
        android:text="Start Quiz"/>


    <Button
        android:id="@+id/exit_app_button"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_quiz_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@color/grey"
        android:padding="12dp"
        android:text="Exit"
        android:textColor="#FFFFFF" />

</RelativeLayout>
